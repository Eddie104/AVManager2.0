<UserControl x:Class="AVManager2.avManager.view.actress.ActressInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="157" d:DesignWidth="137">
    <Button Click="Button_Click" Background="White" Margin="1, 1, 1, 1">
        <DockPanel LastChildFill="False">
            <Image Name="headImg" DockPanel.Dock="Top" Width="125" Height="125"/>
            <DockPanel DockPanel.Dock="Bottom">
                <TextBlock Name="ageLabel" Text="年龄:24" DockPanel.Dock="Left" Margin="5, 0, 0, 0"/>
                <TextBlock Name="heightLabel" Text="身高:160cm" DockPanel.Dock="Right" TextAlignment="Right" Margin="0, 0, 5, 0"/>
            </DockPanel>
            <TextBlock DockPanel.Dock="Bottom" Name="nameLabel" Text="齐天大圣孙悟空" TextAlignment="Center" FontWeight="Bold"/>
        </DockPanel>
    </Button>
</UserControl>
