<UserControl x:Class="AVManager2.avManager.view.video.VideoInfoContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AVManager2.avManager.view.video"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
            <Button DockPanel.Dock="Left" Content="添加" Click="OnShowNewVideoWindow"/>
            <Button DockPanel.Dock="Right" Content="下一页"/>
            <Label Name="pageLabel" DockPanel.Dock="Right" Content="0/0"/>
            <Button DockPanel.Dock="Right" Content="上一页"/>
        </DockPanel>
        <ScrollViewer>
            <WrapPanel Name="videoInfoContainer"/>
        </ScrollViewer>
    </DockPanel>
</UserControl>
